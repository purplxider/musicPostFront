<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="@color/purple"
            android:src="@drawable/expand_down">

        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:textSize="18sp"
            android:text="포스트">
        </TextView>

        <Button
            android:id="@+id/saveButton"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:text="저장"
            android:textSize="16sp">

        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        >

        <TextView
            android:id="@+id/currentMusic"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:text="듣고 있는 음악"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

        </TextView>

        <ImageButton
            android:id="@+id/searchMusicButton"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/expand_right"
            android:backgroundTint="@color/purple">

        </ImageButton>


        <ImageButton
            android:id="@+id/musicPlayButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="17dp"
            android:layout_below="@id/currentMusic"
            android:background="@drawable/round"
            android:layout_gravity="center"
            android:src="@drawable/play"
            android:backgroundTint="@color/purple"
            >

        </ImageButton>

        <TextView
            android:id="@+id/musicTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentMusic"
            android:layout_toRightOf="@id/musicPlayButton"
            android:layout_marginTop="17dp"
            android:layout_marginStart="22dp"
            android:text="음악을 설정하세요"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:textSize="22sp">
        </TextView>

        <TextView
            android:id="@+id/musicArtistLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/musicTitleLabel"
            android:layout_toRightOf="@id/musicPlayButton"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/spoqahansanssneo_light"
            android:textSize="16sp">
            </TextView>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <TextView
                android:id="@+id/currentLocation"
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansanssneo_meduim"
                android:textSize="20sp"
                android:text="현재 위치">

            </TextView>
            <TextView
                android:id="@+id/selectedLocationLabel"
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentLocation"
                android:fontFamily="@font/spoqahansanssneo_light"
                android:textSize="20sp"
                android:text="위치를 설정하세요"
                >

            </TextView>
            <TextView
                android:id="@+id/detailedLocationLabel"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedLocationLabel"
                android:fontFamily="@font/spoqahansanssneo_light"
                android:textSize="15sp"
                android:text="">

            </TextView>

            <ImageButton
                android:id="@+id/searchLocationButton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expand_right"
                android:backgroundTint="@color/purple">

            </ImageButton>

            <Button
                android:id="@+id/changeLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/currentLocation"
                android:layout_marginStart="20dp"
                android:text="장소 변경">

            </Button>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="12dp"
            android:layout_marginStart="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="20sp"
            android:text="제목">

        </TextView>

        <EditText
            android:id="@+id/titleTextBox"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="16sp"
            android:hint="제목을 입력하세요">

        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border">
        <TextView
            android:id="@+id/content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="20sp"
            android:text="내용">

        </TextView>
        <EditText
            android:id="@+id/postContentTextBox"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/content"
            android:minLines="10"
            android:maxLines="999999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_light"
            android:textSize="16sp"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/box_border"
            android:hint="내용을 입력하세요">

        </EditText>
    </RelativeLayout>
</LinearLayout>