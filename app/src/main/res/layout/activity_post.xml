<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border">
        <Button
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp">

        </Button>

        <Space
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Space>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:textSize="16sp"
            android:text="포스트">
        </TextView>

        <Space
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </Space>

        <TextView
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:text="저장"
            android:textSize="16sp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_border"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:text="듣고 있는 음악"
            android:textSize="20sp"
            >

        </TextView>

        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Space>
        <TextView
            android:layout_marginEnd="20dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/spoqahansanssneo_bold"
            android:textSize="25sp"
            android:text=">">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/embeddedMusicPlayer"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/musicPlayButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/round"
            android:layout_gravity="center"
            android:text="II"
            >

        </Button>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/musicTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're So Great"
                android:fontFamily="@font/spoqahansanssneo_bold"
                android:textSize="22sp">
            </TextView>

            <TextView
                android:id="@+id/musicArtistLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blur"
                android:fontFamily="@font/spoqahansanssneo_light"
                android:textSize="16sp"
                >

            </TextView>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bottom_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:orientation="vertical">
            <TextView
                android:layout_marginStart="22dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansanssneo_meduim"
                android:textSize="20sp"
                android:text="현재 위치">

            </TextView>
            <TextView
                android:layout_marginStart="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansanssneo_light"
                android:textSize="20sp"
                android:text="중앙대"
                >

            </TextView>
            <TextView
                android:layout_marginStart="22dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqahansanssneo_light"
                android:textSize="15sp"
                android:text="서울특별시 동작구 흑석로 84">

            </TextView>
            </LinearLayout>

            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Space>
            <Button
                android:layout_gravity="center"
                android:layout_marginRight="21dp"
                android:layout_width="30dp"
                android:layout_height="30dp">

            </Button>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_border">
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginStart="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="20sp"
            android:text="제목">

        </TextView>
        <EditText
            android:layout_marginStart="22dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="16sp"
            android:text="이런 노래는 어떤가요?">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_border">
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginStart="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_meduim"
            android:textSize="20sp"
            android:text="내용">

        </TextView>
        <EditText
            android:layout_marginStart="22dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            android:minLines="10"
            android:maxLines="999999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqahansanssneo_light"
            android:textSize="16sp"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/box_border"
            android:text="이런 내용입니다.">

        </EditText>
    </LinearLayout>
</LinearLayout>